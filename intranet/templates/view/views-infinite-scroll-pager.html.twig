{% if items.next %}
<div class="block-list-teaser__link pager-load-more">
  <ul{{ attributes }}>
    <li class="pager__item">
      <a class="btn btn--large" href="{{ items.next.href }}" title="{{ 'Click to view more news articles'|t }}" rel="next">{{ 'Show more news articles'|t }}</a>
    </li>
  </ul>
</div>
{% endif %}
