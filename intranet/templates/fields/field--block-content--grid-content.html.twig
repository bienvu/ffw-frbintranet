<div class="block-grid-content block-grid-content--has-image">
  <div class="block-grid-content__list">
    {% for item in items %}
      <div class="block-grid-content__item">
        <div class="block-grid-content__image">{{ item.content.field_image }}</div>
        <h3 class="block-grid-content__title"><a href="{{item.content.field_grid_content_link.0['#url']}}" title="{{item.content.field_grid_content_link.0['#title']}}">{{item.content.field_grid_content_link.0['#title']}}</a></h3>
        <div class="block-grid-content__content">{{ item.content.field_grid_content_teaser }}</div>
      </div>
    {% endfor %}
  </div>
</div>
