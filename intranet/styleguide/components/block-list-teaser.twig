  },
]%}
{% block blockListNews %}
  <div class="container">
    <div class="block-list-teaser">
      <div class="block-list-teaser__list">
        {% for item in news%}
          <div class="block-list-teaser__item">
            <h2 class="block-list-teaser__title"><a href="http://fk.ffwvietnam.com">{{ item.title }}</a></h2>
            <div class="meta">
              <div class="meta__item meta__link color-green-light">{{ item.link }}</div>
              <div class="meta__item meta__date">{{ item.date }}</div>
              <div class="meta__item meta__comment">{{ item.comment }}</div>
            </div>
            <div class="block-list-teaser__image"><a href="#">{{ item.image }}</a></div>
            <div class="block-list-teaser__body text-large"><a>{{ item.body }}</a></div>
          </div>
        {% endfor %}
      </div>
      <div class="block-list-teaser__link pager-load-more"><a class="btn btn--large" href="#">Indlæs flere nyheder</a></div>
    </div>
  </div>
{% endblock %}
